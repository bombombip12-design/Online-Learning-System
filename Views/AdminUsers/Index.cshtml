@using FinalASB.ViewModels
@model List<UserViewModel>
@{
    Layout = "_AdminLayout";

    ViewBag.Title = "User Management";
}

<div class="page-header">
    <h2><i class="bi bi-people me-2"></i>Quản lý người dùng</h2>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tên hoặc email..." value="@Context.Request.Query["search"]" />
                </div>
            </div>
            <div class="col-md-3">
                <select name="isActive" class="form-select">
                    <option value="">-- Tất cả trạng thái --</option>
                    <option value="true" selected="@(Context.Request.Query["isActive"].ToString() == "true")">Hoạt động</option>
                    <option value="false" selected="@(Context.Request.Query["isActive"].ToString() == "false")">Vô hiệu</option>
                </select>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel"></i> Lọc
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
            <div>
                <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectAll()">
                    <i class="bi bi-check-all me-1"></i>Chọn tất cả
                </button>
                <button type="button" class="btn btn-sm btn-outline-secondary ms-2" onclick="deselectAll()">
                    <i class="bi bi-x-square me-1"></i>Bỏ chọn tất cả
                </button>
                <span class="ms-3 text-muted" id="selectedCount">Đã chọn: 0</span>
            </div>
            <button type="button" class="btn btn-danger btn-sm" id="deleteSelectedBtn" onclick="showDeleteModal()" disabled>
                <i class="bi bi-trash me-1"></i>Xóa đã chọn
            </button>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 40px;" class="text-center">
                            <input type="checkbox" id="selectAllCheckbox" onchange="toggleSelectAll(this)" />
                        </th>
                        <th class="ps-4"><i class="bi bi-person me-2"></i>Tên người dùng</th>
                        <th><i class="bi bi-envelope me-2"></i>Gmail</th>
                        <th class="text-center"><i class="bi bi-book me-2"></i>Số lượng lớp đã đăng ký</th>
                        <th class="text-center"><i class="bi bi-person-badge me-2"></i>Số lượng lớp quản lý</th>
                        <th><i class="bi bi-calendar me-2"></i>Ngày tạo tài khoản</th>
                        <th class="text-center"><i class="bi bi-gear me-2"></i>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())

                    {
                        @foreach (var u in Model)

                        {
                            var enrolledClasses = u.EnrolledCount;
                            var ownedClasses = u.OwnedClasses;
                            <tr>
                                <td class="text-center">
                                    <input type="checkbox" class="user-checkbox" value="@u.Id" onchange="updateSelectedCount()" />
                                </td>
                                <td class="ps-4 fw-semibold">@u.FullName</td>
                                <td>@u.Email</td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@enrolledClasses</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-success">@ownedClasses</span>
                                </td>
                                <td>@u.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="/AdminUsers/Edit/@u.Id" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-sm @(u.IsActive ? "btn-outline-danger" : "btn-outline-success")"
                                                data-user-id="@u.Id"
                                                data-user-name="@u.FullName"
                                                data-user-email="@u.Email"
                                                data-is-active="@u.IsActive.ToString().ToLower()"
                                                onclick="showConfirmDialog(this)"
                                                title="@(u.IsActive ? "Vô hiệu hóa" : "Kích hoạt")">
                                            <i class="bi bi-@(u.IsActive ? "x-circle" : "check-circle")"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }

                    else

                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                <p class="mt-2 mb-0">Không tìm thấy người dùng nào</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal xác nhận thay đổi trạng thái -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="confirmModalLabel">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Xác nhận thay đổi trạng thái tài khoản
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Bạn có chắc chắn muốn <strong id="actionText"></strong> tài khoản sau đây?</p>
                <div class="alert alert-info mb-0">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-person-fill me-2"></i>
                        <strong>Tên người dùng:</strong>
                        <span class="ms-2" id="userName"></span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-envelope-fill me-2"></i>
                        <strong>Gmail:</strong>
                        <span class="ms-2" id="userEmail"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Hủy
                </button>
                <a id="confirmButton" href="#" class="btn btn-danger">
                    <i class="bi bi-check-circle me-1"></i>Xác nhận
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa nhiều người dùng -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Xác nhận xóa người dùng
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="DeleteMultiple" id="deleteForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p class="mb-3">Bạn có chắc chắn muốn xóa <strong id="deleteCount"></strong> người dùng đã chọn?</p>
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Lưu ý:</strong> Hành động này không thể hoàn tác!
                    </div>
                    <div class="mb-3">
                        <label for="deleteAdminPassword" class="form-label fw-semibold">
                            <i class="bi bi-key me-2"></i>Mật khẩu admin <span class="text-danger">*</span>
                        </label>
                        <input type="password" name="AdminPassword" id="deleteAdminPassword" class="form-control" placeholder="Nhập mật khẩu admin để xác nhận" required />
                        <input type="hidden" name="userIds" id="deleteUserIds" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Hủy
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function showConfirmDialog(button) {
        const userId = button.getAttribute('data-user-id');
        const userName = button.getAttribute('data-user-name');
        const userEmail = button.getAttribute('data-user-email');
        const isActive = button.getAttribute('data-is-active') === 'true';

        const actionText = isActive ? 'vô hiệu hóa' : 'kích hoạt';
        const actionTextCapitalized = isActive ? 'Vô hiệu hóa' : 'Kích hoạt';

        // Cập nhật nội dung modal
        document.getElementById('actionText').textContent = actionTextCapitalized;
        document.getElementById('userName').textContent = userName;
        document.getElementById('userEmail').textContent = userEmail;

        // Cập nhật link xác nhận
        const confirmButton = document.getElementById('confirmButton');
        confirmButton.href = '/AdminUsers/ToggleActive/' + userId;
        confirmButton.className = isActive ? 'btn btn-danger' : 'btn btn-success';
        confirmButton.innerHTML = '<i class="bi bi-check-circle me-1"></i>Xác nhận';
        // Cập nhật màu header modal
        const modalHeader = document.querySelector('#confirmModal .modal-header');
        const closeButton = modalHeader.querySelector('.btn-close');
        if (isActive) {
            modalHeader.className = 'modal-header bg-danger text-white';
            closeButton.className = 'btn-close btn-close-white';
        } else {
            modalHeader.className = 'modal-header bg-success text-white';
            closeButton.className = 'btn-close btn-close-white';
        }

        // Cập nhật tiêu đề modal
        const modalTitle = document.getElementById('confirmModalLabel');
        modalTitle.innerHTML = '<i class="bi bi-exclamation-triangle-fill me-2"></i>Xác nhận thay đổi trạng thái tài khoản';

        // Hiển thị modal
        const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
        modal.show();
    }

    function updateSelectedCount() {
        const checkboxes = document.querySelectorAll('.user-checkbox:checked');
        const count = checkboxes.length;
        document.getElementById('selectedCount').textContent = 'Đã chọn: ' + count;
        document.getElementById('deleteSelectedBtn').disabled = count === 0;

        // Cập nhật checkbox "Chọn tất cả"
        const allCheckboxes = document.querySelectorAll('.user-checkbox');
        const selectAllCheckbox = document.getElementById('selectAllCheckbox');
        if (selectAllCheckbox) {
            selectAllCheckbox.checked = allCheckboxes.length > 0 && checkboxes.length === allCheckboxes.length;
        }
    }

    function toggleSelectAll(checkbox) {
        const userCheckboxes = document.querySelectorAll('.user-checkbox');
        userCheckboxes.forEach(cb => {
            cb.checked = checkbox.checked;
        });
        updateSelectedCount();
    }

    function selectAll() {
        const userCheckboxes = document.querySelectorAll('.user-checkbox');
        userCheckboxes.forEach(cb => {
            cb.checked = true;
        });
        const selectAllCheckbox = document.getElementById('selectAllCheckbox');
        if (selectAllCheckbox) {
            selectAllCheckbox.checked = true;
        }
        updateSelectedCount();
    }

    function deselectAll() {
        const userCheckboxes = document.querySelectorAll('.user-checkbox');
        userCheckboxes.forEach(cb => {
            cb.checked = false;
        });
        const selectAllCheckbox = document.getElementById('selectAllCheckbox');
        if (selectAllCheckbox) {
            selectAllCheckbox.checked = false;
        }
        updateSelectedCount();
    }

    function showDeleteModal() {
        const checkboxes = document.querySelectorAll('.user-checkbox:checked');
        if (checkboxes.length === 0) {
            alert('Vui lòng chọn ít nhất một người dùng để xóa.');
            return;
        }

        const userIds = Array.from(checkboxes).map(cb => cb.value);
        document.getElementById('deleteCount').textContent = checkboxes.length;
        document.getElementById('deleteUserIds').value = userIds.join(',');
        document.getElementById('deleteAdminPassword').value = '';

        const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
        modal.show();
    }
</script>